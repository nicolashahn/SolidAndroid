<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context="com.csform.android.uiapptemplate.UserProfileEditActivity">
    <ImageView
        android:id="@+id/image"
        style="@style/ImageViewStyle"
        android:layout_gravity="center_horizontal"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/emailView"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/nameEdit"
        android:hint="Edit name"
        android:layout_gravity="center_horizontal" />

    <com.csform.android.uiapptemplate.font.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        style="@style/TextViewAppearance.Caption3"
        android:paddingTop="0dp"
        android:text="Name"
        android:id="@+id/nameHeader" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneEdit"
        android:hint="Edit phone number"
        android:layout_gravity="center_horizontal" />

    <com.csform.android.uiapptemplate.font.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        style="@style/TextViewAppearance.Caption3"
        android:paddingTop="0dp"
        android:text="Phone number"
        android:id="@+id/phoneHeader" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/buttonLayout">

        <com.csform.android.uiapptemplate.view.MaterialRippleLayout
            style="@style/RippleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            app:rippleColor="@color/main_color_grey_400" >

            <com.csform.android.uiapptemplate.font.RobotoTextView
                android:id="@+id/cancel"
                style="@style/ButtonStyle.RaisedEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/main_color_500"
                android:minWidth="112dp"
                android:text="@string/cancel"
                android:textColor="#fff" />
        </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

        <com.csform.android.uiapptemplate.view.MaterialRippleLayout
          style="@style/RippleStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="3dp"
          app:rippleColor="@color/main_color_grey_400" >

           <com.csform.android.uiapptemplate.font.RobotoTextView
                android:id="@+id/saveChanges"
                style="@style/ButtonStyle.RaisedEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/main_color_500"
                android:minWidth="112dp"
                android:text="@string/saveChanges"
                android:textColor="#fff" />
           </com.csform.android.uiapptemplate.view.MaterialRippleLayout>
    </LinearLayout>
</LinearLayout>
